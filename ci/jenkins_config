pipeline {
  agent none

  options {
    disableConcurrentBuilds(abortPrevious: true)
    timeout(time: 6, unit: 'HOURS')
  }

  triggers {
    issueCommentTrigger('.*test this please.*')
  }

  environment {
    OMP_NUM_THREADS = 2
  }

  stages {
    stage('Test') {
      parallel {
        stage('CPU') {
          agent {
            docker {
              image "rombur/adamantine-stack:no_gpu-latest"
                alwaysPull true
                label 'docker || nvidia-docker || rocm-docker'
            }
          }
          steps {
            sh 'rm -rf build && mkdir -p build'
              dir('build') {
                sh '''#!/bin/bash
                  cmake \
                  -D CMAKE_BUILD_TYPE=Debug \
                  -D ADAMANTINE_ENABLE_TESTS=ON \
                  -D CMAKE_CXX_FLAGS="-Wall -Wextra -pedantic" \
                  -D DEAL_II_DIR=${DEAL_II_DIR} \
                  ..
                '''
                sh 'make -j3'
                sh 'ctest --no-compress-output -R test_ -T Test'
              }
          }
          post {
            always {
              xunit([CTest(deleteOutputFiles: true, failIfNotNew: true, pattern: 'build/Testing/**/Test.xml', skipNoTestFiles: false, stopProcessingIfError: true)])
            }
          }
        }

        stage('CUDA') {
          agent {
            docker {
              image "rombur/adamantine-stack:latest"
                alwaysPull true
                label 'nvidia-docker && ampere'
            }
          }
          steps {
            sh 'rm -rf build && mkdir -p build'
              dir('build') {
                sh '''#!/bin/bash
                  cmake \
                  -D CMAKE_BUILD_TYPE=Debug \
                  -D ADAMANTINE_ENABLE_TESTS=ON \
                  -D ADAMANTINE_ENABLE_COVERAGE=OFF \
                  -D CMAKE_CXX_FLAGS="-Wall -Wextra" \
                  -D DEAL_II_DIR=${DEAL_II_DIR} \
                  ..
                '''
                sh 'make -j8'
                sh 'ctest --no-compress-output -R test_ -T Test'
              }
          }
          post {
            always {
              xunit([CTest(deleteOutputFiles: true, failIfNotNew: true, pattern: 'build/Testing/**/Test.xml', skipNoTestFiles: false, stopProcessingIfError: true)])
            }
          }
        }
      }
    }
  }
}
